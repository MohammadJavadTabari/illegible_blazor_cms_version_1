@page "/PostDetail/{int:Id}"

<MudPaper>
    <MudContainer>
        <MudText Align="Align.Center" Typo="Typo.h2" Color="Color.Success">
            @blogPostDto.Title
        </MudText>
        <div class="row mt-2">
            <img class="IW10 IH10" src="@blogPostDto.PostImageUrl" />
        </div>
        <div class="row">
            <MudText Align="Align.Left" Typo="Typo.caption">
                @blogPostDto.PostContext
            </MudText>
        </div>
    </MudContainer>
</MudPaper>