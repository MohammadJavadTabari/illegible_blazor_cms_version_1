@page "/usersDetailForAdminHandler"
@using illShop.Shared.Dto.DtosRelatedIdentity
<div class="row">
    <div class="col">
        <MudTable ServerData="@(new Func<TableState, Task<TableData<UserDetailDto>>>(GetServerData))"
                  Hover="true" Breakpoint="Breakpoint.Sm" RightAlignSmall="true"
                  @ref="_table" RowsPerPage="4">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Users Detail</MudText>
                <MudSpacer />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>User Name</MudTh>
                <MudTh>Email </MudTh>
                <MudTh>PhoneNumber</MudTh>
                <MudTh>AccessFaildCount</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="UserName">@context.UserName</MudTd>
                <MudTd DataLabel="Email">@context.Email</MudTd>
                <MudTd DataLabel="PhoneNumber">@context.PhoneNumber</MudTd>
                <MudTd DataLabel="AccessFaildCount">@context.AccessFaildCount</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager PageSizeOptions="@_pageSizeOption" RowsPerPageString="Products per page" />
            </PagerContent>
        </MudTable>
    </div>
</div>