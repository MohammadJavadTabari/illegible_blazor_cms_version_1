<MudDrawer @bind-Open="SideBarOpen" Elevation="1" Class="IIsometricPattern">
    <MudDrawerHeader>
        <MudAvatar Color="Color.Transparent" Size="Size.Large" Image="Images/shopping.png" />
        <MudText Typo="Typo.h6" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;">Ill Shop</MudText>
    </MudDrawerHeader>
    <MudNavMenu Class="IBGCBlack IBGOpacity90">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Class="ITshadowBlack" Icon="@Icons.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/products" Class="ITshadowBlack" Icon="@Icons.Filled.ArtTrack">Products</MudNavLink>

        <MudNavGroup Title="Product Category" Class="ITshadowBlack" Icon="@Icons.Filled.Category" Expanded="false">
            @{
                foreach (var cat in CategoryDtoList)
                {
                    <MudNavLink Href="/products" Class="ITshadowBlack" Icon="@cat.Icon">@cat.CategoryName</MudNavLink>
                }
            }
        </MudNavGroup>
