<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudAvatar Color="Color.Transparent" Size="Size.Large" Image="Images/shopping.png" />
        <MudText Typo="Typo.h6" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;">Ill Shop</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/products" Icon="@Icons.Filled.DashboardCustomize">Products</MudNavLink>
        <MudNavGroup Title="Expanding" Icon="@Icons.Filled.DashboardCustomize" Expanded="false">
            <MudNavLink Href="#" Icon="@Icons.Filled.Camera">Photos</MudNavLink>
            <MudNavLink Href="#" Icon="@Icons.Filled.Celebration">Party</MudNavLink>
        </MudNavGroup>
        <AuthorizeView>
            <Authorized>
                <MudNavLink Href="/logout" Icon="@Icons.Filled.DashboardCustomize">Logout</MudNavLink>
            </Authorized>
            <NotAuthorized>
                <MudNavLink Href="/login" Icon="@Icons.Filled.DashboardCustomize">Login</MudNavLink>
                <MudNavLink Href="/registration" Icon="@Icons.Filled.DashboardCustomize">Registration</MudNavLink>
            </NotAuthorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrator">
            <Authorized>
                <div class="nav-item px-3">
                    <MudNavLink Href="/addProduct" Icon="@Icons.Filled.Storage">AddProduct</MudNavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </MudNavMenu>
</MudDrawer>